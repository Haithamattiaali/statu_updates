# Production Environment Variables for Netlify Deployment
# These should be configured in Netlify's Environment Variables UI

# Database Configuration (PostgreSQL) - REPLACE WITH YOUR ACTUAL DATABASE URL
# Sign up for free at: https://supabase.com or https://neon.tech
DATABASE_URL="postgresql://username:password@host:port/database?schema=public&sslmode=require"

# Application Configuration
NODE_ENV="production"
PORT="3001"

# Frontend URL (your Netlify domain) - UPDATE AFTER FIRST DEPLOYMENT
FRONTEND_URL="https://your-app.netlify.app"

# CORS Configuration - UPDATE AFTER FIRST DEPLOYMENT
CORS_ORIGIN="https://your-app.netlify.app"

# API Configuration - UPDATE AFTER FIRST DEPLOYMENT
API_BASE_URL="https://your-app.netlify.app/.netlify/functions/api"

# Logging Level
LOG_LEVEL="error"

# File Upload Configuration
MAX_FILE_SIZE="10485760" # 10MB in bytes
ALLOWED_FILE_TYPES="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel,application/json"

# Feature Flags
ENABLE_EXCEL_UPLOAD="true"
ENABLE_JSON_UPLOAD="true"
ENABLE_VERSION_HISTORY="true"
ENABLE_ROLLBACK="true"