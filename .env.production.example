# Production Environment Variables for Netlify Deployment
# Copy this file to .env.production and fill in your actual values
# These should be configured in Netlify's Environment Variables UI

# Database Configuration (PostgreSQL)
# Use a managed PostgreSQL service like:
# - Supabase: https://supabase.com
# - Neon: https://neon.tech
# - Railway: https://railway.app
# - Heroku Postgres: https://www.heroku.com/postgres
DATABASE_URL="postgresql://username:password@host:port/database?schema=public&sslmode=require"

# Alternative: Use Prisma Data Proxy for connection pooling
# DATABASE_URL="prisma://aws-us-east-1.prisma-data.com/?api_key=YOUR_API_KEY"

# Application Configuration
NODE_ENV="production"
PORT="3001"

# Frontend URL (your Netlify domain)
FRONTEND_URL="https://your-app.netlify.app"

# CORS Configuration
CORS_ORIGIN="https://your-app.netlify.app"

# API Configuration
API_BASE_URL="https://your-app.netlify.app/.netlify/functions/api"

# Logging Level
LOG_LEVEL="error"

# File Upload Configuration
MAX_FILE_SIZE="10485760" # 10MB in bytes
ALLOWED_FILE_TYPES="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel,application/json"

# Session/Security (if needed)
SESSION_SECRET="your-secure-random-session-secret-at-least-32-characters"
JWT_SECRET="your-secure-random-jwt-secret-at-least-32-characters"

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Feature Flags (optional)
ENABLE_EXCEL_UPLOAD="true"
ENABLE_JSON_UPLOAD="true"
ENABLE_VERSION_HISTORY="true"
ENABLE_ROLLBACK="true"

# Monitoring (optional - for production monitoring)
SENTRY_DSN=""
NEW_RELIC_LICENSE_KEY=""
DATADOG_API_KEY=""

# External Services (if needed)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM=""

# Backup Configuration (optional)
BACKUP_ENABLED="false"
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
S3_BACKUP_BUCKET=""
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_REGION=""